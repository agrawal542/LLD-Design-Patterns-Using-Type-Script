{
  "compilerOptions": {
    "target": "ES2020",                    // Modern JS target
    "module": "CommonJS",                  // For Node.js
    "moduleResolution": "node",            // Look for node_modules
    "outDir": "./dist",                    // Compiled JS goes here
    "rootDir": "./src",                    // Your source TS files
    "esModuleInterop": true,               // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // Enables all strict type checks
    "skipLibCheck": true                   // Speeds up builds
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}